generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String       @id @default(uuid())
  nome        String?
  email       String       @unique
  senhaHash   String
  profissao   String?      // Profissão do usuário
  empresa     String?      // Empresa do usuário
  dispositivos Dispositivo[]
  criadoEm    DateTime     @default(now())
  foto        String?      // URL ou caminho da foto do usuário
  areaTotal   Float?       // hectares
  cultivos    String?      // lista separada por vírgula
  dispositivosAtivos Int?  // quantidade de dispositivos
  ultimaAtualizacao DateTime? // última edição do perfil
}

model Dispositivo {
  id          String       @id @default(uuid())
  nome        String
  deviceId    String       @unique
  usuario     Usuario      @relation(fields: [usuarioId], references: [id])
  usuarioId   String
  sensores    DadoSensor[]
  criadoEm    DateTime     @default(now())
}

model DadoSensor {
  id              String     @id @default(uuid())
  dispositivo     Dispositivo @relation(fields: [dispositivoId], references: [id])
  dispositivoId   String
  umidadeSolo     Float
  luminosidade    Float
  temperaturaSolo Float
  temperaturaAr   Float
  criadoEm        DateTime   @default(now())
}
